<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atrás"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTituloActuadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actuadores"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvBuzzer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buzzer"
        android:textSize="20sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/tvTituloActuadores"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="48dp"/>

    <Button
        android:id="@+id/btnBuzzerOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvBuzzer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnBuzzerOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/btnBuzzerOn"
        app:layout_constraintStart_toEndOf="@id/btnBuzzerOn"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tvRele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relé"
        android:textSize="20sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/btnBuzzerOn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="48dp"/>

    <Button
        android:id="@+id/btnReleOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvRele"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnReleOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/btnReleOn"
        app:layout_constraintStart_toEndOf="@id/btnReleOn"
        android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>