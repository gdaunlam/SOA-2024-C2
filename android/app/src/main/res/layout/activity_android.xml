<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <TextView
        android:id="@+id/tvEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NORMAL"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvUltimaActualizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Última actualización: 2023-05-20 15:30"
        android:textSize="12sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/tvEstado"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTemperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura"
        android:textSize="18sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/tvUltimaActualizacion"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="48dp"/>

    <TextView
        android:id="@+id/tvTemperaturaValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 °C"
        android:textSize="24sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/tvTemperatura"
        app:layout_constraintStart_toStartOf="@id/tvTemperatura"/>

    <TextView
        android:id="@+id/tvHumedad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humedad"
        android:textSize="18sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/tvTemperaturaValor"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvHumedadValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60 %"
        android:textSize="24sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/tvHumedad"
        app:layout_constraintStart_toStartOf="@id/tvHumedad"/>

    <TextView
        android:id="@+id/tvCO2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CO2"
        android:textSize="18sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/tvHumedadValor"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvCO2Valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="400 ppm"
        android:textSize="24sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/tvCO2"
        app:layout_constraintStart_toStartOf="@id/tvCO2"/>

    <TextView
        android:id="@+id/tvPuerta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puerta"
        android:textSize="18sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/tvCO2Valor"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tvPuertaValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrada"
        android:textSize="24sp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/tvPuerta"
        app:layout_constraintStart_toStartOf="@id/tvPuerta"/>

    <Button
        android:id="@+id/btnIrActuadores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir a actuadores"
        android:textSize="18sp"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>